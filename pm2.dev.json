{
  "apps" : [{
    "name"               : "werewolf",
    "script"             : "index.js",

    // logs
    "log_date_format"    : "YYYY-MM-DD HH:mm Z",
    "max_memory_restart" : "700M",
    "error_file"         : "./log/error.log",
    "out_file"           : "./log/out.log",
    "merge_logs"         : true,

    // watch file changed & reload
    "watch"              : ["controller", "environment"],

    // environment variables
    "env": {
      "NODE_ENV": "dev",
      "DEBUG"   : "Werewolf",
      "DEBUG_FD": 1
    }
  }]
}
