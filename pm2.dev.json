{
  "apps" : [{
    "name"               : "werewolf",
    "script"             : "app.js",
    "env": {
      "COMMON_VARIABLE": "true",
      "NODE_ENV": "dev",
      "DEBUG": "Werewolf",
      "DEBUG_FD": 1
    },

    "log_date_format"    : "YYYY-MM-DD HH:mm Z",
    "max_memory_restart" : "700M",
    "merge_logs"         : true,
    "error_file"         : "./log/error.log",
    "out_file"           : "./log/out.log",

    "watch"              : ["controller", "environment"]
  }]
}
